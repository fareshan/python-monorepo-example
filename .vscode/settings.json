{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
  },
  "editor.formatOnSave": true,
  "python.analysis.typeCheckingMode": "basic",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "multiCommand.commands": [
    // https://awesome-streamlit.readthedocs.io/en/latest/vscode.html
    {
      "command": "multiCommand.streamlitActiveFile",
      "label": "Streamlit: Run Active File",
      "description": "Streamlit run active file in active terminal",
      "sequence": [
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "streamlit run '${relativeFile}'\u000D"
          }
        }
      ]
    },
  ],
  "python.analysis.extraPaths": [
    "./libs/base" // fixes false pylance/pyright alert in vscode (reportMissingImport)
  ],
  "autoDocstring.docstringFormat": "one-line-sphinx"
}